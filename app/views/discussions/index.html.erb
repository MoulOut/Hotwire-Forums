<% if @category.present? %>
  <%= turbo_stream_from @category %>
<% else %>
  <%= turbo_stream_from "discussions" %>
<% end %>
<section class="discussions w-full">
  <div class="flex mb-2 justify-between items-center w-full">
    <h1 class="font-bold text-4xl">Discussions</h1>
    <%= link_to "New Discussions", new_discussion_path, class: "btn btn-neutral" %>
  </div>
  <%= turbo_stream_from "categories" %>
  <div class="flex w-full gap-2">
    <div class="w-1/5 categories">
      <h5 class="text-lg mb-2">Categories</h5>
      <%= render partial: "categories/category", collection: Category.sorted %>
    </div>
    <div class="w-4/5">
      <% if @category %>
        <h4 class="text-xl">Viewing discussions in <%= @category.name %></h4>
      <% end %>
      <ul id="discussions" class="list gap-4">
        <% if @discussions.any? %>
          <%= render partial: "discussions/discussion", collection: @discussions %>
        <% else %>
          No discussions yet
        <% end %>
      </ul>
    </div>
  </div>
</section>
