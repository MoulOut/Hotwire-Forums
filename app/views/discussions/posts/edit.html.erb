<%= turbo_frame_tag dom_id @post do %>
  <div class="chat <%= @post.user == @post.discussion.user ? 'chat-start' : 'chat-end' %>">
    <%= render "discussions/posts/header", post: @post %>
    <div class="chat-bubble">
      <%= form_with model: [@post.discussion, @post] do |f| %>
        <%= f.label :body, class: "hidden" %>
        <%= f.text_field :body, value: @post.body.body.to_plain_text, autofocus: true, class: "input-ghost" %>
      <% end %>
      <%= link_to "Cancel", discussion_path(@post.discussion) %>
      <%= link_to "Delete", discussion_post_path(@post.discussion, @post) , data: { turbo_method: :delete } %>
    </div>
  </div>
<% end %>