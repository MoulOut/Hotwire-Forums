<%= turbo_frame_tag dom_id(discussion) do %>
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-xl"><%= discussion.name %></h1>
      <span class="fs-6">
        <% if discussion.pinned %>
          <span class="badge badge-primary">Pinned</span>
        <% end %>

        <% if discussion.closed %>
          <span class="badge badge-primary">Closed</span>
        <% end %>
      </span>
    </div>
    <div>
      <%= link_to "Edit", edit_discussion_path(discussion), class: "btn btn-primary btn-sm" %>
      <%= link_to "Delete", discussion, data: { turbo_method: :delete, confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
    </div>
  </div>
<% end %>
