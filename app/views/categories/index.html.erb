<% content_for :title, "Categories" %>

<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Categories</h1>
    <%= link_to "New category", new_category_path, class: "btn btn-neutral" %>
  </div>

  <div id="categories" class="list flex gap-2">
    <%= turbo_stream_from "categories" %>
    <% if @categories.any? %>
      <%= render @categories %>
    <% else %>
      <p class="text-center my-10">No categories found.</p>
    <% end %>
  </div>
</div>
