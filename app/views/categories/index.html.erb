<% content_for :title, "Categories" %>

<div class="w-full">

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Categories</h1>
    <%= link_to "New category", new_category_path, class: "btn btn-neutral" %>
  </div>

  <div id="categories" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @categories.any? %>
      <% @categories.each do |category| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render category %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
            <%= link_to "Show", category, class: "btn btn-sm btn-primary" %>
            <%= link_to "Edit", edit_category_path(category), class: "btn btn-sm btn-primary" %>
            <%= button_to "Destroy", category, method: :delete, class: "btn btn-sm btn-secondary", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No categories found.</p>
    <% end %>
  </div>
</div>
